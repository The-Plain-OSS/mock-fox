{
  "name": "mock-fox",
  "version": "1.0.0",
  "description": "Mock Fox desktop app",
  "author": "Woojin Kim",
  "type": "module",
  "main": "electron-main.js",
  "build": {
    "files": [
      "electron-main.js",
      "preload.cjs",
      "index.html",
      "description.html",
      "assets/**",
      "dist/**"
    ],
    "mac": {
      "target": ["dmg"],
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
      "icon": "build/icon.icns",
      "extraResources": [
        { "from": "resources/darwin-amd64", "to": "resources/darwin-amd64" },
        { "from": "resources/darwin-arm64", "to": "resources/darwin-arm64" }
      ]
    },
    
    "win": { 
      "target": ["nsis"],
      "artifactName": "${productName}-${version}-win-${arch}.${ext}",
      "icon": "build/icon.ico",
      "forceCodeSigning": false,
        "signAndEditExecutable": false,
  "signExts": [],
      "extraResources": [
        { "from": "resources/windows-amd64", "to": "resources/windows-amd64" }
      ]
    }
  },
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "devDependencies": {
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12"
  }
}
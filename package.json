{
  "name": "mock-fox",
  "version": "1.0.0",
  "type": "module",
  "main": "electron-main.js",
    "build": {
    "files": [
      "electron-main.mjs",
      "preload.cjs",
      "index.html",
      "dist/**"
    ],
    "extraResources": [
      { "from": "resources/windows-amd64", "to": "resources/windows-amd64", "platform": "win", "filter": ["**/*"] },
      { "from": "resources/darwin-amd64",  "to": "resources/darwin-amd64",  "platform": "mac", "filter": ["**/*"] },
      { "from": "resources/darwin-arm64",  "to": "resources/darwin-arm64",  "platform": "mac", "filter": ["**/*"] }
    ],
    "mac": { "target": ["dmg"], "artifactName": "${productName}-${version}-mac-${arch}.${ext}" },
    "win": { "target": ["nsis"], "artifactName": "${productName}-${version}-win-${arch}.${ext}" }
  },
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "dependencies": {
    "electron": "^30.0.0"
  }
}
